<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cxp.graduate.mapper.EmailMapper"> 

   	<!-- 根据邮箱名查询邮箱 -->
	<resultMap type="Email" id="emailMapper">
   		<result property="date" column="registTime"/>
   	</resultMap>
   	<select id="findEmailByName" resultMap="emailMapper" parameterType="String">
   		select * from regist where email=#{email}
   	</select>

	<!-- 插入邮箱 -->
	<insert id="insertEmail" parameterType="Email">
		insert into regist(email,state,code,registTime) values (#{email},#{state},#{code},#{date});
	</insert>
</mapper>